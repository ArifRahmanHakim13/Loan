<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".SimActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/Theme.AppCompat.Dialog"
            app:title="Model Simulation"
            app:titleCentered="true"
            app:titleTextColor="@color/white" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender (Muda=0, Tua=1)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Married"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Married (0~1)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Dependents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dependents(0~3)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Education(0~2)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Self_Employed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Self_Employed(0~1)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ApplicantIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ApplicantIncome(0~72.5k)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/CoapplicantIncom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CoapplicantIncom(0~24.0k)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/LoanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="LoanAmount(28~550)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Loan_Amount_Term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Loan_Amount_Term(6~480)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Credit_History"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Credit_History(0~1)"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnCheck"
                    android:layout_width="147dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Predict" />

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
